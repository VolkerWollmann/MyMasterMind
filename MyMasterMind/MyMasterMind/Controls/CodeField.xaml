<UserControl x:Class="MyMasterMind.Controls.CodeField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMasterMind.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Red" Background="Red" Command="{Binding SelectColorCommand, Mode=OneWay}"/>
                <MenuItem Header="Green" Background="Green"/>
                <MenuItem Header="Blue" Background="Blue"/>
                <MenuItem Header="Yellow" Background="Yellow"/>
                <MenuItem Header="Magenta" Background="Magenta"/>
                <MenuItem Header="Cyan" Background="Cyan"/>
            </ContextMenu>
        </StackPanel.ContextMenu>
        <Rectangle Name="CodeFieldRectangle" Fill="Beige" HorizontalAlignment="Left" 
                   Height="30" Margin="1,1,0,0"
                   Stroke="DarkMagenta" StrokeThickness="2"
                   VerticalAlignment="Center" Width="30" ></Rectangle>
    </StackPanel>
</UserControl>
