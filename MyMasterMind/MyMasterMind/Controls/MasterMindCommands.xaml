<UserControl x:Class="MyMasterMind.Controls.MasterMindCommands"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMasterMind.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinWidth="150">
    <Border Name="BoardBorder" BorderThickness="3,3,3,3" BorderBrush="Black">
        <StackPanel  HorizontalAlignment="Stretch"  >
            <Button Name="ButtonCommandComputer" Height="50"  
                Margin="10,10,10,10">
                Computer
            </Button>
            <Button Name="ButtonCommandUser"  Height="50" Margin="10,10,10,10">
                User
            </Button>
            <Button Name="ButtonCommandCheck"  Height="50" Margin="10,10,10,10">
                Check
            </Button>
        </StackPanel>
    </Border>
</UserControl>
